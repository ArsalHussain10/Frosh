@{
    ViewData["Title"] = "Home Page";
}

@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>




<style>
    body {
        /*background: linear-gradient(to bottom, #a2e5a2, #a2e5a2);*/
        background: radial-gradient(#88ed8c, #a2a4bf);
    }

    .form-area {
        width: 30%;
        display: flex;
        align-items: center; /* centers the element vertically */
        justify-content: center; /* centers the element horizontally */
        margin-top: 1%;
        padding: 25px;
        border-radius: 25px;
        background-color: white;
        box-shadow: 3px 3px 10px #000000;
        border: 1px solid #ccc;
        margin: 0 auto
    }

    .col-form-label {
        padding-right: 67px;
    }

    input[type="text"], input[type="email"], input[type="password"] {
        border-radius: 25px;
        border: none;
        padding: 5px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        font-size: 12px;
        background-color: #f8f8f8;
    }

    input[type="submit"] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        font-size: 16px;
    }

    h1 {
        text-align: center;
        color: white;
        text-shadow: 2px 2px 4px #000000;
        font-size: 3em;
    }

    #submit-btn {
        /*background: radial-gradient(#88ed8c, #a2a4bf);*/
        background: linear-gradient(to bottom, #38a238, #a2e5a2);
        transition: all 0.1s ease-in-out;
    }

        #submit-btn:hover {
            transform: rotate(2deg);
        }
</style>

<center><h1>SignIn page</h1></center>

<div class="form-area">
    <form method="post" action="/User/SignIn">
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
            </div>
        </div>
        <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-10">
                <input type="submit" id="submit-btn" value="Submit" />
            </div>
        </div>
        <a  asp-action="SignUp" asp-controller="User" >Account Not Created?.</a>

    </form>

</div>





